{% extends 'base.html.twig' %}

{% block title %}Hello AdminDashbordController!{% endblock %}

{% block content %}
    <h1 class="text-center">Hello {{ user }}! âœ…</h1>
    {% if app.flashes('success') %}
        {% for message in app.flashes('success') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
    {% endif %}
    {% if errors %}
        <div class="alert alert-danger">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <div class="flex items-center justify-center p-12">
        <div class="max-w-md mt-5">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}
