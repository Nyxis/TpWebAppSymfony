{% extends 'admin/login/_layout.html.twig' %}

{% block body %}
    <div class="flex items-center justify-center h-screen mt-8">
        <div class="flex-row items-center">

            <a href="{{ path('app_user_list') }}" id="seeAllUsersBtn" class="inline-block bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-700 transition-colors duration-300">See All Users</a>
        </div>
    </div>

    <script>
        document.getElementById('seeAllUsersBtn').addEventListener('click', function() {
            this.classList.toggle('bg-green-500');
            this.classList.toggle('hover:bg-green-700');
        });
    </script>
{% endblock %}





