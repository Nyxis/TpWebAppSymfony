{% extends 'admin/users/_layout.html.twig' %}

{% block title %}
    Users list
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Users list</h1>
        <a href="{{ path('app_user_register') }}" class="btn btn-primary">Add an user</a>

        <table>
            <tr>
                <thead>
                    <th>UserId</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Action</th>
                </thead>
            </tr>
            <tbody>
            {% for user in users %}
                <tr >
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.email }}</td>
                    {% for role in user.roles %}
                    <td>{{ role }}</td>
                    {% endfor %}
                    <td>
                        <a href="{{ path('app_user_show', { 'id':user.id})}}">See details</a>
                        <a href="{{ path('app_user_edit', { id: user.id }) }}" class="btn btn-info">Edit</a>
                        <a href="{{ path('app_user_delete', { id: user.id }) }}" class="btn btn-warning">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>

{% endblock %}
