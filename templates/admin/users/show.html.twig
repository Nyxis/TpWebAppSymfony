{% extends 'admin/users/_layout.html.twig' %}

{% block title %}
	User list
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center h-screen mt-4">
		<div class="max-w-sm rounded overflow-hidden shadow-lg">
			<img src="{{ asset('images/user.jpg') }}" alt="userPhoto" class="w-full h-auto" style="max-width: 200px;">
			<div class="px-6 py-4">
				<div class="font-bold text-xl mb-2">User Information</div>
				<p class="text-gray-700 text-base">{{ user.firstname }}</p>
				<p class="text-gray-700 text-base">{{ user.lastname }}</p>
				<p class="text-gray-700 text-base">{{ user.email }}</p>
				{% for role in user.roles %}
					<p class="text-gray-700 text-base">{{ role }}</p>
				{% endfor %}
			</div>
			<div class="px-6 pt-4 pb-2">
				<a href="{{ path('app_user_edit', { id: user.id }) }}" class="inline-block bg-green-500 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Edit</a>
				<a href="{{ path('app_user_delete', { id: user.id }) }}" class="inline-block bg-red-500 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Delete</a>
			</div>
		</div>
	</div>
{% endblock %}

