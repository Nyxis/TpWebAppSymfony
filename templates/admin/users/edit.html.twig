{% extends 'admin/users/_layout.html.twig' %}

{% block body %}
    <div class="container mx-auto mt-8 flex  flex-col justify-center items-center">
        <div class="max-w-lg">
            {% for message in app.flashes('success') %}
                <div class="bg-green-500 text-white p-4 mb-4 rounded">{{ message }}</div>
            {% endfor %}

            <h2 class="text-2xl font-bold mt-4">  Edit User</h2>
            {{ form_start(form, {'action':path('app_user_edit', { id: user.id }), 'class': 'w-full max-w-lg'}) }}

            <div class="flex flex-wrap mx-3 mb-6">
                {{ form_row(form.firstname, {'attr': {'class': 'w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 focus:outline-none focus:bg-white focus:border-gray-500'}}) }}
            </div>

            <div class="flex flex-wrap mx-3 mb-6">
                {{ form_row(form.lastname, {'attr': {'class': 'w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 focus:outline-none focus:bg-white focus:border-gray-500'}}) }}
            </div>

            <div class="flex flex-wrap mx-3 mb-6">
                <div class="px-3">
                    {{ form_row(form.email, {'attr': {'class': 'w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 focus:outline-none focus:bg-white focus:border-gray-500'}}) }}
                </div>
            </div>

            <div class="flex flex-wrap mx-3 mb-6">
                <div class="px-3">
                    {{ form_row(form.password, {'attr': {'class': 'w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 focus:outline-none focus:bg-white focus:border-gray-500'}}) }}
                </div>
            </div>

            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.roles, {'attr': {'class': 'w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 focus:outline-none focus:bg-white focus:border-gray-500'}}) }}
                </div>
            </div>

            <button type="submit" class="bg-green-500 text-white px-4 py-2 mt-4 rounded hover:bg-blue-700">
                Submit
            </button>

            {{ form_end(form) }}
            <p class="mt-4 block text-center font-sans text-base font-normal leading-relaxed text-gray-700 antialiased">
                Back to list
                <a href="{{ path('app_user_list') }}" class="bg-green-500 text-white py-2 px-4 rounded mt-4 hover:bg-blue-700">See All Users</a>
            </p>
        </div>
    </div>
{% endblock %}





