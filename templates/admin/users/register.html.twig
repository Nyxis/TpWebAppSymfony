{% extends 'admin/users/_layout.html.twig' %}

{% block body %}
    <div class="container mx-auto mt-8">
        {% block flash_messages %}
            {% for flashMessage in app.flashes('success') %}
                <div class="bg-green-500 text-white p-4 mb-4 rounded">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            {% for flashMessage in app.flashes('error') %}
                <div class="bg-red-500 text-white p-4 mb-4 rounded">
                    {{ flashMessage }}
                </div>
            {% endfor %}
        {% endblock %}

        <h2 class="text-2xl font-bold mt-4">Register</h2>

        {{ form_start(form, {'action': path('app_user_register')}) }}
        <div class="grid grid-cols-1 gap-4 mt-4">
            {{ form_row(form.firstname, {'attr': {'class': 'p-2 border rounded'}}) }}
            {{ form_row(form.lastname, {'attr': {'class': 'p-2 border rounded'}}) }}
            {{ form_row(form.email, {'attr': {'class': 'p-2 border rounded'}}) }}
            {{ form_row(form.password, {'attr': {'class': 'p-2 border rounded'}}) }}
            {{ form_row(form.roles, {'attr': {'class': 'p-2 border rounded'}}) }}
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 mt-4 rounded">Register</button>
        {{ form_end(form) }}
    </div>

    <a href="{{ path('app_user_list') }}" class="bg-blue-500 text-white py-2 px-4 rounded">See All Users</a>
{% endblock %}

