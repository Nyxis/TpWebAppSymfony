{% extends 'admin/users/_layout.html.twig' %}

{% block body %}

    <div class="container mx-auto mt-8 flex  flex-col justify-center items-center">
        <div class="max-w-lg">
            {% for message in app.flashes('success') %}
                <div class="bg-green-500 text-white p-4 mb-4 rounded">{{ message }}</div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="bg-red-500 text-white p-4 mb-4 rounded">{{ message }}</div>
            {% endfor %}

            <h2 class="text-2xl font-bold mt-4">Register</h2>
            {{ form_start(form, {'action': path('app_user_register'), 'class': 'w-full'}) }}

            {% set inputClass = 'w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 focus:outline-none focus:bg-white focus:border-gray-500' %}

            <div class="flex flex-wrap mx-3 mb-6 mt-4">
                {{ form_row(form.firstname, {'attr': {'class': inputClass}}) }}
            </div>

            <div class="flex flex-wrap mx-3 mb-6 mt-4">
                {{ form_row(form.lastname, {'attr': {'class': inputClass}}) }}
            </div>

            <div class="flex flex-wrap mx-3 mb-6 mt-4">
                {{ form_row(form.email, {'attr': {'class': inputClass}}) }}
            </div>

            <div class="flex flex-wrap mx-3 mb-6 mt-4">
                <div class="px-3">
                    {{ form_row(form.password, {'attr': {'class': inputClass}}) }}
                    <p class="text-gray-600 text-xs italic">Make it as long and as crazy as you'd like</p>
                </div>
            </div>

            <div class="flex flex-wrap -mx-3 mb-6 mt-4">
                <div class="md:w-1/3 px-3 mb-6 md:mb-0">
                    {{ form_row(form.roles, {'attr': {'class': inputClass}}) }}
                </div>
            </div>

            <button type="submit" class="bg-blue-500 text-white px-4 py-2 mt-4 rounded hover:bg-blue-700">Register</button>
            <p class="mt-4 block text-center font-sans text-base font-normal leading-relaxed text-gray-700 antialiased">
                Already have an account?
                <a class="font-semibold text-pink-500 transition-colors hover:text-blue-700"
                        href="{{ path('app_login') }}">
                    Sign In
                </a>
            </p>
            <p class="mt-4 block text-center font-sans text-base font-normal leading-relaxed text-gray-700 antialiased">
                Back to list
                <a href="{{ path('app_user_list') }}" class="bg-green-500 text-white py-2 px-4 rounded mt-4 hover:bg-blue-700">See All Users</a>
            </p>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}






